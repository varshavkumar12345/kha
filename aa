<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Candle Animation</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #3E2F41;
        }
        .candle {
            position: relative;
            width: 100px;
            height: 200px;
            background: linear-gradient(to bottom, #F5F5F5, #D3D3D3);
            border-radius: 30px 30px 10px 10px;
            box-shadow: 0px 10px 20px rgba(255, 255, 255, 0.3);
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding-top: 20px;
        }
        .flame {
            position: absolute;
            top: -70px;
            left: 50%;
            width: 50px;
            height: 80px;
            background: radial-gradient(ellipse at center, yellow 20%, orange 50%, red 80%, transparent 100%);
            border-radius: 50% 50% 60% 60%;
            transform: translateX(-50%);
            animation: flicker 0.2s infinite alternate, sway 1s infinite alternate;
        }
        
        @keyframes flicker {
            0% { transform: translateX(-50%) scale(1); opacity: 1; }
            100% { transform: translateX(-50%) scale(1.2); opacity: 0.8; }
        }
        
        @keyframes sway {
            0% { transform: translateX(-50%) rotate(-3deg); }
            100% { transform: translateX(-50%) rotate(3deg); }
        }

        .glow {
            position: absolute;
            top: -100px;
            left: 50%;
            width: 120px;
            height: 120px;
            background: radial-gradient(circle, rgba(255,165,0,0.5) 10%, rgba(255,140,0,0.2) 50%, transparent 80%);
            border-radius: 50%;
            transform: translateX(-50%);
        }

        .wick {
            position: absolute;
            top: -10px;
            left: 50%;
            width: 5px;
            height: 20px;
            background: black;
            border-radius: 5px;
            transform: translateX(-50%);
        }
    </style>
</head>
<body>
    <div class="candle">
        <div class="wick"></div>
        <div class="glow"></div>
        <div class="flame" id="flame"></div>
    </div>

    <script>
        function flickerEffect() {
            const flame = document.getElementById("flame");
            setInterval(() => {
                const scale = 1 + Math.random() * 0.3;
                const opacity = 0.8 + Math.random() * 0.2;
                flame.style.transform = `translateX(-50%) scale(${scale}) rotate(${Math.random() * 6 - 3}deg)`;
                flame.style.opacity = opacity;
            }, 100);
        }
        flickerEffect();
    </script>
</body>
</html>
